{
  "name": "ai-prd-generator",
  "displayName": "Mise-en-Place",
  "description": "AI-Powered PRD Generator",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johndoe/ai-prd-generator.git"
  },
    "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:ai-prd-generator.generatePrd",
    "onCommand:ai-prd-generator.viewPrd"
  ],

  "contributes": {
    "commands": [
      {
        "command": "ai-prd-generator.generatePrd",
        "title": "Generate PRD with AI"
      },
      {
        "command": "ai-prd-generator.setOpenAiApiKey",
        "title": "Set OpenAI API Key"
      },
      {
        "command": "ai-prd-generator.viewPrd",
        "title": "View PRD"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceFilename =~ /\\.(json|md)$/ || resourceFilename =~ /\\.graph\\.json$/",
          "command": "ai-prd-generator.viewPrd",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "AI PRD Generator",
      "properties": {
        "aiPrdGenerator.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API Key for generating PRDs.",
          "markdownDescription": "Your Google Gemini API Key for generating PRDs. You can get one from [Google AI Studio](https://aistudio.google.com/app/apikey)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^14.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.20.2",
    "eslint": "^9.25.1",
    "fs-extra": "^11.3.0",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/cytoscape": "^3.21.9",
    "@types/node-fetch": "^2.6.12",
    "cytoscape": "^3.32.1",
    "json-viewer-js": "^1.0.8",
    "node-fetch": "^2.7.0",
    "openai": "^5.10.1"
  }
}
