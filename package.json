{
  "name": "ai-prd-generator",
  "displayName": "Mise-en-Place",
  "description": "AI-Powered PRD Generator",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-prd-generator.generatePrd",
    "onCommand:ai-prd-generator.viewJsonPrd",
    "onCommand:ai-prd-generator.viewGraphPrd",
    "onCommand:ai-prd-generator.setApiKey"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-prd-generator.generatePrd",
        "title": "Generate PRD with AI"
      },
      {
        "command": "ai-prd-generator.viewJsonPrd",
        "title": "View as Interactive PRD"
      },
      {
        "command": "ai-prd-generator.viewGraphPrd",
        "title": "View as Interactive Graph"
      },
      {
        "command": "ai-prd-generator.setApiKey",
        "title": "Set Gemini API Key"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == json",
          "command": "ai-prd-generator.viewJsonPrd",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .json && resourceFilename =~ /\\.graph\\.json$/",
          "command": "ai-prd-generator.viewGraphPrd",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AI PRD Generator",
      "properties": {
        "aiPrdGenerator.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API Key for generating PRDs.",
          "markdownDescription": "Your Google Gemini API Key for generating PRDs. You can get one from [Google AI Studio](https://aistudio.google.com/app/apikey)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/cytoscape": "^3.21.9",
    "@types/node-fetch": "^2.6.12",
    "cytoscape": "^3.32.1",
    "json-viewer-js": "^1.0.8",
    "node-fetch": "^2.7.0"
  }
}
