{
  "name": "ai-prd-generator",
  "displayName": "Mise-en-Place",
  "description": "AI-Powered PRD Generator",
  "version": "0.1.10",
  "publisher": "jammie-anson",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johndoe/ai-prd-generator.git"
  },
  "activationEvents": [
    "onCommand:ai-prd-generator.generatePrd"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-prd-generator.generatePrd",
        "title": "Mise-en-Place: Generate PRD"
      }
    ],
    "configuration": {
      "title": "AI PRD Generator",
      "properties": {
        "aiPrdGenerator.openAiModel": {
          "type": "string",
          "default": "gpt-4o",
          "description": "The OpenAI model to use for generating content."
        },
        "aiPrdGenerator.prdOutput.prdPath": {
          "type": "string",
          "default": "mise-en-place-output/prd",
          "description": "The output path for generated PRD files, relative to the workspace root."
        },
        "aiPrdGenerator.contextCardOutput.contextCardPath": {
          "type": "string",
          "default": "mise-en-place-output/context-cards",
          "description": "The output path for generated context cards, relative to the workspace root."
        },
        "aiPrdGenerator.contextTemplateOutput.contextTemplatePath": {
          "type": "string",
          "default": "mise-en-place-output/context-templates",
          "description": "The output path for generated context templates, relative to the workspace root."
        }
      }
    }
  },
  "scripts": {
    "comment-index": "node scripts/generate-comment-index.js",
    "codebase-graph": "node scripts/generate-codebase-graph.js",
    "vscode:prepublish": "npm run build",
    "clean": "rm -rf dist",
    "clean-all": "rm -rf dist out coverage",
    "build": "npm run clean && node esbuild.js",
    "compile": "npm run clean && npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run check-types && npm run lint && node esbuild.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "node scripts/test.js all",
    "test:unit": "node scripts/test.js unit",
    "test:integration": "node scripts/test.js integration",
    "test:extension": "node scripts/test.js extension",
    "test:smoke": "node scripts/test.js smoke",
    "test:ui-state": "npx mocha --require ts-node/register src/test/integration/webview/uiState.test.ts --timeout 10000",
    "test:tolowercase-safety": "npx mocha --require ts-node/register src/test/regression/toLowerCaseSafety.test.ts --timeout 10000",
    "test:coverage": "node scripts/test.js all --coverage",
    "test:watch": "node scripts/test.js all --watch",
    "test:ci": "npm run pretest && npm run test:coverage && npm run test:smoke",
    "test:full": "npm run test:ci && npm run validate:deps",
    "validate:deps": "node scripts/validate-dependencies.js",
    "prepackage": "npm run validate:deps && npm run test:smoke",
    "test:analyzer": "echo 'Analyzer temporarily disabled due to dependency issues'"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^14.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.25.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/cytoscape": "^3.21.9",
    "@types/node-fetch": "^2.6.12",
    "cytoscape": "^3.32.1",
    "cytoscape-dagre": "^2.5.0",
    "dagre": "^0.8.5",
    "json-viewer-js": "^1.0.8",
    "node-fetch": "^2.7.0",
    "openai": "^5.10.1"
  }
}
